{
  "name": "dove-jwt",
  "version": "0.0.4",
  "description": "Domain Validated JSON Web Tokens",
  "main": "dist/dove-jwt.js",
  "scripts": {
    "test": "npm run lint && npm run docker-tests",
    "lint": "eslint src",
    "docker-tests": "docker run -it --rm -v $(pwd):/app -w /app node:8 npm run jest",
    "jest": "jest",
    "build": "npm run test && babel -d dist src",
    "webpack": "webpack",
    "prepublish": "scrape-debian-ca && npm run build",
    "precommit": "lint-staged",
    "scrape-debian-ca": "docker run --rm node:8 cat /etc/ssl/certs/ca-certificates.crt > src/ca-certificates-browser.crt"
  },
  "bin": {
    "dove-jwt": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/streamkitchen/dove-jwt.git"
  },
  "keywords": ["JWT"],
  "author": "Streamplace",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/streamkitchen/dove-jwt/issues"
  },
  "homepage": "https://github.com/streamkitchen/dove-jwt#readme",
  "dependencies": {
    "debug": "^2.6.0",
    "inquirer": "^3.2.1",
    "jsonwebtoken": "^7.2.1",
    "node-forge": "^0.6.49",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-preset-streamplace": "*",
    "eslint": "^3.13.0",
    "husky": "^0.14.3",
    "jasmine-es6": "^0.4.0",
    "jest": "^18.1.0",
    "joi-browser": "^10.6.1",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "raw-loader": "^0.5.1",
    "yargs": "^8.0.2"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"],
    "*.css": ["prettier --write", "git add"]
  }
}
